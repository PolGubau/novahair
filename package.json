{
	"name": "@novahair/monorepo",
	"version": "1.0.0",
	"private": true,
	"description": "Novahair monorepo - Admin, Booking, and Landing applications",
	"repository": {
		"type": "git",
		"url": "https://github.com/polgubau/novahair.git"
	},
	"scripts": {
		"dev": "pnpm --filter \"./apps/*\" dev",
		"dev:admin": "pnpm --filter @novahair/admin dev",
		"dev:booking": "pnpm --filter @novahair/booking dev",
		"dev:landing": "pnpm --filter @novahair/landing dev",
		"build": "pnpm --filter \"./apps/*\" build",
		"build:admin": "pnpm --filter @novahair/admin build",
		"build:booking": "pnpm --filter @novahair/booking build",
		"build:landing:clean": "pnpm --filter @novahair/clean-landing build",
		"lint": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" lint",
		"format": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" format",
		"check": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" check",
		"test": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" test",
		"clean": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" exec rm -rf node_modules .output dist .tanstack",
		"clean:all": "pnpm clean && rm -rf node_modules"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"typescript": "5.7.2"
	},
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	}
}
